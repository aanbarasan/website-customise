{
  "name": "Website scripting",
  "short_name": "Web script",
  "description": "Developers can add javascript codes in webpage. Like customizing other websites with our own codes.",
  "version": "2.4.1",
  "offline_enabled": true,
  "icons": {
    "16": "image/16_icon.png",
    "48": "image/48_icon.png",
    "128": "image/128_icon.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "options_ui": {
    "page": "options_page.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_title": "Website-scripting",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "commonFunction.js",
      "background.js"
    ]
  },
  "manifest_version": 2
}

