{
  "name": "Website scripting",
  "short_name": "Web script",
  "description": "Custom scripting in websites",
  "version": "2.1.0",
  "icons": {
    "16": "image/16_icon.png",
    "48": "image/48_icon.png",
    "128": "image/128_icon.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "options_page": "options_page.html",
  "browser_action": {
    "default_title": "Website-scripting",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "commonFunction.js",
      "background.js"
    ]
  },
  "manifest_version": 2
}

