{
  "name": "Website scripting",
  "short_name": "Web script",
  "description": "Custom scripting in websites",
  "version": "2.0.1",
  "icons": { "16": "image/16_icon.png",
           "48": "image/48_icon.png",
          "128": "image/128_icon.png" },
  "permissions": [
    "activeTab", "storage", "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["commonFunction.js","content-script.js"]
    }
  ],
  "options_page": "options_page.html",
  "browser_action": {
    "default_title": "Youtube float video",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2
}

